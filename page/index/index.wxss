/**index.wxss**/

page {
  padding-right: 30rpx;
  background-color: #f6f6f6;
  padding-bottom: 60rpx;
}

.swiper{
  width: 700rpx;
  align-items: center;
  box-sizing: border-box;
  margin: 16rpx auto 22rpx;
  padding: 10rpx;
  height: 320rpx;
  background-color: #ffffff;
  border-radius:12rpx;
  box-shadow: 0 0 15rpx rgba(26,29,148,.5);
}

.swiper-item {
  border-radius:12rpx;
  display:flex;
  width: 700rpx;
  align-items: center;
  justify-self:center;
}

.category-container {
  margin-top: 16rpx;
  position: relative;
}

.suona-box {
  background-color: white;
  display: flex;
  flex-wrap: wrap;
  width: 700rpx;
  margin-left: 25rpx;
  border-radius: 10px;
  position: inherit;
} 

.category-box {
  background-color:white;
  display: flex;
  flex-wrap: wrap;
  width: 700rpx;
  margin-left: 25rpx;
  border-radius: 10px;
  padding: 20rpx 0;
  position: inherit;
}

.icon{
  width: 60rpx;
  height: 60rpx;
  padding: 56rpx;
  padding-bottom: 20rpx;
  font-size: 24rpx;
}
.suona {
  width: 15px;
  height: 15px;
  padding: 12px;
}

.xinwen {
  display:flex;
  text-align: center;
  flex-direction:column;
  align-items: center;
  justify-content:center;
  font-size: 30rpx;
  color:gray;
}

.lianjie{
  display: flex;
  align-items: center;
  flex-direction:column;
}

.lianjie_wen {
  font-size: 24rpx;
}

.zui {
  margin-top: 16rpx;
  width: 700rpx;
  padding: 20rpx;
}

.list_container{
  display: flex;
  flex-wrap: wrap;
  /* border: 3px solid #434343; */
}
.list_container .list{
  width: 47%;
  padding-top: 15rpx;
  padding-left: 7%;
}

.kecheng {
  width: 350rpx;
  height: 350rpx;
}
/* 主体 */ 
.course_wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
}

.course_item {
  width: 45%;
  margin-bottom: 20rpx;
  margin: 10rpx 8rpx;
  background-color: white;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
}
.course_image {
  position: relative;
}

.course_images {
  width: 184rpx;
  height: 121rpx;
}

.course_image image{
  width: 100%;
  border-radius: 10rpx;
}

.bottom {
  display: flex;
  flex-direction: column; 
}

.bottom text{
  margin-left: 15rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.jiashao {
  margin: auto;
  margin-right: 10rpx;
}

.jiashao image{
  width: 30rpx;
}

.jiashao text{
  color: #CDCDCD;
  margin-left: 3rpx;
  font-size: 25rpx;
  font-weight: 400;
}