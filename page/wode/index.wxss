/**index.wxss**/

page {
  padding: 30rpx;
  background-color: #f6f6f6;
  padding-bottom: 60rpx;
}

.wode {
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  justify-content: space-between;
}
.category-container {
  margin-top: 16rpx;
  position: relative;
}

.category-box {
  background-color:white;
  display: flex;
  flex-wrap: wrap;
  width: 700rpx;
  border-radius: 10px;
  padding: 20rpx 0;
  position: inherit;
}

.tubiao {
  width: 50rpx;
  height: 50rpx;
  padding: 43rpx;
  padding-bottom: 20rpx;
  font-size: 24rpx;
}

.lianjie{
  width: 175rpx;
  display: flex;
  align-items: center;
  flex-direction:column;
}

.lianjie_wen {
  font-size: 24rpx;
}

.icon {
  width: 20px;
  height: 20px;
  padding-right:10px;
}

.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 44rpx;
  margin-bottom: 40rpx;
}

.top_tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  margin-bottom: 28rpx;
}

.power {
  margin-top: 20rpx;
  border-radius: 5px;
  background-color: white;
  width: 93%;
}

.power_info {
  display: flex;
  flex-direction:row;
  padding: 30rpx 25rpx;
  align-items: center;
  justify-content: space-between;
}

.power_info_more {
  margin-right: 3px;
  width: 20rpx;
  height: 30rpx;
}

.power_info_less {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(270deg);
}

.power_info_text {
  display: flex;
  flex-direction: row;
}

.power_info_text_title {
  display: flex;
  margin-bottom: 10rpx;
  font-weight: 400;
  font-size: 30rpx;
  align-items: center;
}


.power_item {
  padding: 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
}

.power_item_title {
  font-size: 30rpx;
}

.power_item_icon {
  width: 30rpx;
  height: 30rpx;
}


.userinfo {
  display: flex;
  align-items: center;
  width: 700rpx;
  height: 200rpx;
  background-color: white;
  border-radius: 10rpx;
}

/* 头像 */
.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin-left: 50rpx;
  margin-right: 25px;
  border-radius: 50%;
  overflow:hidden;
}

.userinfo_nickname {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 1;
  display: block;
}

/* 学校 */
.school {
  font-size: 25rpx;
  font-weight: 300;
  padding-top: 30rpx;
}
.geren {
  width: 200rpx;
  margin-left: 80rpx;
}
