<!--pages/assessment/assessment.wxml-->
<view class="addStudent">
  <button class="tianjia">添加学生</button>
</view>
<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">全部</view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">待测评</view>
  <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">测评中</view>
  <view class="swiper-tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">已结束</view>
</view>
<view class="activities_container">
  <swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">
    <swiper-item class="all">
        <view class="waitFor">
          <text class="assTitle">少儿心理健康量表</text>
          <text class="assText">答题人:学生</text>
          <text class="assText">2021年9月12日-2021年10月10日</text>
        </view>
        <view class="review">
          <text class="assTitle">少儿心理健康量表</text>
          <text class="assText">答题人:学生</text>
          <text class="assText">2021年9月12日-2021年10月10日</text>
        </view>
        <view class="finished">
          <text class="assTitle">少儿心理健康量表</text>
          <text class="assText">答题人:学生</text>
          <text class="assText">2021年9月12日-2021年10月10日</text>
        </view>
    </swiper-item>
  
    <swiper-item class="clairy">
      <view class="waitFor">
        <text class="assTitle">少儿心理健康量表</text>
        <text class="assText">答题人:学生</text>
        <text class="assText">2021年9月12日-2021年10月10日</text>
      </view>
    </swiper-item>
  
    <swiper-item class="game">
      <view class="review">
        <text class="assTitle">少儿心理健康量表</text>
        <text class="assText">答题人:学生</text>
        <text class="assText">2021年9月12日-2021年10月10日</text>
      </view>
    </swiper-item>
  
    <swiper-item class="application">
      <view class="finished">
        <text class="assTitle">少儿心理健康量表</text>
        <text class="assText">答题人:学生</text>
        <text class="assText">2021年9月12日-2021年10月10日</text>
      </view>
    </swiper-item>
  </swiper>
</view>